@model IEnumerable<ASP_NET_HW_11.Models.Database.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]"/>
            <input type="submit" value="Search" class="btn btn-default"> | 
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortParameter="@ViewData["NameSortParameter"]">@Html.DisplayNameFor(model => model.Name)</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortParameter="@ViewData["DifficultySortParameter"]">@Html.DisplayNameFor(model => model.Difficulty)</a>
        </th>
        <th>
           <a asp-action="Index"  asp-route-sortParameter="@ViewData["FareRateSortParameter"]"> @Html.DisplayNameFor(model => model.FareRate)</a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FareRate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>